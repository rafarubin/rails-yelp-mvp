<h1>Restaurant</h1>

<div>
  <h1> <%= @restaurant.name %>  </h1>


  <div class="card w-50 mb-3">
    <div class="card-body bg-info-subtle">
      <%= @restaurant.address %>
    </div>
  </div>
  <div>
    <p><strong>Reviews</strong></p>
    <ul class="list-group">
      <% @restaurant.reviews.each do |review| %>
        <li clas="list-group-item"><%= review.content %></li>
        <p> <strong>Rating: </strong> <%=  review.rating %></p>
      <% end %>
    </ul>
  </div>
    <%= link_to "Write a review", new_restaurant_review_path(@restaurant.id)  %>
  <div>
    <p>
    </p>

  </div>

  </div>


